set encoding=utf-8

let g:python3_host_prog = expand('C:\Users\T.Kuriki\AppData\Local\Programs\Python\Python37-32\python.exe')

if &compatible
    set nocompatible
endif
set runtimepath+=~/vimfiles/dein/repos/github.com/Shougo/dein.vim

if dein#load_state(expand('~/vimfiles/dein/repos/github.com/Shougo/dein.vim'))
call dein#begin(expand('~/vimfiles/dein'))
call dein#add(expand('~/vimfiles/dein/repos/github.com/Shougo/dein.vim'))

call dein#add('Shougo/defx.nvim')
if !has('nvim')
call dein#add('roxma/nvim-yarp')
call dein#add('roxma/vim-hug-neovim-rpc')
endif
autocmd FileType defx call s:defx_my_settings()

function! s:defx_my_settings() abort
" Define mappings
nnoremap <silent><buffer><expr> <CR>
\ defx#do_action('drop')
nnoremap <silent><buffer><expr> l 
\ defx#is_directory() ?
\ defx#do_action('open') :
\ defx#do_action('drop')
nnoremap <silent><buffer><expr> N
\ defx#do_action('new_file')
nnoremap <silent><buffer><expr> q
\ defx#do_action('quit')

endfunction
call dein#end()
call dein#save_state()
endif

filetype plugin indent on
syntax enable

