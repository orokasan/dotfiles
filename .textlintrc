{
  "rules": {
    "ja-hiragana-keishikimeishi": true,
    "ja-hiragana-fukushi": true,
    "ja-hiragana-hojodoushi": true,
//    "max-appearence-count-of-words": { "limit": 5 },
    "apostrophe": true,
    "common-misspellings":true,
    "prh": {
        "rulePaths" : [
            "/usr/local/lib/node_modules/prh/prh-rules/media/WEB+DB_PRESS.yml",
            "/usr/local/lib/node_modules/prh/prh-rules/files/markdown.yml"
            ],
    "preset-ja-technical-writing": {
        "sentence-length": {
            max: 125
            },
        "max-comma": {
               max: 5
           },
        "max-ten": {
            "max" : 3
            },
        "no-exclamation-question-mark": {
            // allow to use !
            "allowHalfWidthExclamation": false,
            // allow to use ！
            "allowFullWidthExclamation": true,
            // allow to use ?
            "allowHalfWidthQuestion": false,
            // allow to use ？
            "allowFullWidthQuestion": true
            },
        "no-doubled-joshi": {
                    // 助詞のtoken同士の距離が2以下ならエラー
                    "min_interval" : 3,
                    // 例外を許可するかどうか
                    "strict": false,
                    // 助詞のうち「も」「や」は複数回の出現を許す
                    "allow": ["とか", "たり","にも"],
                    // 文区切り文字の配列
                },
        "ja-no-mixed-period":false,
        "no-mix-dearu-desumasu": false,
        "ja-unnatural-alphabet": true,
        "no-unmatched-pair": true
        }
    }
}
